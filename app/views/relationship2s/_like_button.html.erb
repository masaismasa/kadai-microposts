<%# unless current_user == user %>
  <%#if current_user.liking?(micropost) %>
    <%#= form_for(current_user.relationship2s.find_by(micropost_id: user.id), html: { method: :delete }) do |f| %>
      <%#= hidden_field_tag :micropost_id, user.id %>
      <%#= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
    <%# end %>
  <%# else %>
    <%#= form_for(current_user.relationship2s.build) do |f| %>
      <%#= hidden_field_tag :micropost_id, user.id %>
      <%#= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <%# end %>
  <%# end %>
<%# end %>